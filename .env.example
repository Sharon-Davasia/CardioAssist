# CardioAssist Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ==============================================
# Demo Mode
# ==============================================
VITE_DEMO_MODE=true  # Set to false for production

# ==============================================
# Auth0 Configuration
# ==============================================
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret
AUTH0_AUDIENCE=https://cardioassist-api.example.com
AUTH0_CALLBACK_URL=http://localhost:8080/callback

# ==============================================
# Snowflake Configuration
# ==============================================
SNOWFLAKE_ACCOUNT=your_account.snowflakecomputing.com
SNOWFLAKE_USER=your_snowflake_user
SNOWFLAKE_PASSWORD=your_snowflake_password
SNOWFLAKE_WAREHOUSE=CARDIOASSIST_WH
SNOWFLAKE_DATABASE=cardioassist_db
SNOWFLAKE_SCHEMA=public
SNOWFLAKE_ROLE=CARDIOASSIST_ADMIN

# ==============================================
# AWS S3 Configuration (for file uploads)
# ==============================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET=cardioassist-files
S3_UPLOAD_PREFIX=intakes/

# ==============================================
# Backend API
# ==============================================
VITE_API_BASE_URL=http://localhost:8000/api/v1
API_SECRET_KEY=your_random_secret_key_here_min_32_chars

# ==============================================
# Monitoring & Logging
# ==============================================
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
LOG_LEVEL=info

# ==============================================
# Rate Limiting
# ==============================================
RATE_LIMIT_PER_MINUTE=60

# ==============================================
# CORS (for production)
# ==============================================
CORS_ORIGINS=https://cardioassist.example.com,https://app.cardioassist.example.com

# ==============================================
# Feature Flags
# ==============================================
ENABLE_FILE_UPLOAD=true
ENABLE_AI_SUMMARIZATION=true
ENABLE_AUDIT_LOG=true
